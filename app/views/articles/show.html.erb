<div class='row article_memo'>
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= render "articles", articles: [@article] %>
  </div>
  
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 article_memo_in">
    <%= form_for(@memo, html: {class: 'article_memo_in'} ) do |f| %>
    <%= f.hidden_field :article_id, :value => params['id'] %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :type, :value => 'Memo' %>
    <div class='form-group article_memo_in'>
      <%= f.label :content, 'メモ' %>
      <%= f.text_area :content , class: 'form-control', id: 'memo_field'%>
    </div>
    <%= f.submit "投稿", class: 'form-control btn btn-info'%>
    <% end %>
  </div>
</div>