<% if current_user.favorite?(article) %>
  <%= form_tag(user_art_connect_path(article.id), method: :delete) do %>
    <%= hidden_field_tag :article_id, article.id %>
    <%= hidden_field_tag :type, 'Favorite' %>
    <%= submit_tag 'Favorite', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(user_art_connects_path, class: 'form-inline') do %>
    <%= hidden_field_tag :article_id, article.id %>
    <%= hidden_field_tag :type, 'Favorite' %>
    <%= submit_tag 'Favorite it', class: 'btn btn-primary' %>
  <% end %>
<% end %>